{% set componentName = "wiloke-content-slide-test" %}

<div class="{{ componentName }}-1 group* wiloke-1-container trs:0.3s_ease ov:hidden {{borderColor ? 'bd:1px_solid' : ''}} cur:pointer mih:100% d:flex fld:column" style="{{borderWidth}} {{ borderStyle }} {{ borderColor }}{{ borderRadius }}">
	<div class="pos:relative ov:hidden">
		<a href="{{post.link}}" class="pos:absolute ins:0 z:3"></a>
		<div class="{{ componentName }}-1__image  bgz:cover bgp:center pt:100% ar:348/433" style="background-image: url('{{item.featuredImage}}')"></div>
		<div class="pos:absolute z:4 op:0 trs:0.3s l:30px l:10px@+sm b:30px b:10px@+sm r:30px r:10px@+sm p:30px p:10px@+sm d:flex fld:column jc:flex-end wiloke-1-box bgc:rgba(0,0,0,0.5)"  style="{{backgroundSecondary}} {{borderWidth}} {{ borderStyle }} {{ borderColor }}{{ borderRadius }}">
			<div>
				<h2 class="p:0! m:0! fz:pfs(16px,22px)">
          <a href="{{item.link}}" class="titleTypo fz:pfs(16px,22px)  td:none! fw:500 c:#fff {{ componentName }}-1__title" style="{{titleTypo}}{{colorLight}}">{{item.title}}</a>
        </h2>
				<div class="textTypo fz:pfs(12px,16px) c:#fff mt:10px {{ componentName }}-1__text" style="{{textTypo}}{{colorLight}}">{{item.text}}</div>
				<a href="{{item.link}}" target="{{item.target}}" class="wiloke-1-button whs:nowrap td:none! fz:pfs(12px,16px) bdrs:6px pt:pfs(5px,10px) pr:pfs(12px,20px) pb:pfs(5px,10px) pl:pfs(12px,20px) trs:0.3s d:inline-block mt:10px {{ componentName }}-1__button" style="{{colorLightVariable}}{{colorGray9Variable}}">{{item.buttonText}}</a>
			</div>
		</div>
	</div>
</div>

