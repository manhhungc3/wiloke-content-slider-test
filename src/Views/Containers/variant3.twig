{% set componentName = "wiloke-content-slide-test" %}
{% set componentFile = 'component3.twig' %}


{% if content|length == 0 %}
	<div class="{{ componentName }}-wrapper">
		<div class="p:40px fz:20px ta:center bgc:#eee cur:pointer">Click here to set up the Slide</div>
	</div>
{% else %}
	<div class="{{ componentName }}-wrapper lh:1.5">
		{# <div class="{{ componentName }}-skeleton">
			<div class="{{ componentName }}-grid" style="{{ columnStyles }};{{ gapStyles }}">
				{% for item in content %}
					<div class="{{ componentName }}-col">
						{% include "Skeleton/skeleton1.twig" %}
					</div>
				{% endfor %}
			</div>
		</div> #}
		<div class="{{ componentName }}-content ">
      <div class="d:flex jc:space-between ai:center mb:30px fxw:wrap@+md jc:center@+md">
        <div></div>
        <div class="wiloke-3-mainTitle mainTitleTypo ff:Cabin fz:40px fw:500 lh:49px!" style="{{mainTitleTypo}}{{colorPrimaryVariable}}">{{mainTitle}}</div>
        <div>
          {% set length = content.length > 9 ? content.length : '0' ~ content.length %}
          <span class="number-page-3" style="{{colorGray9Variable}}"></span>
          <span style="{{colorGray9Variable}}">/</span>
          <span style="{{colorGray7Variable}}">{{length}}</span>
        </div>
      </div>
			<div class="d:flex pos:relative h:597px">
				<div class="{{ componentName }}-grid w:60% pr:60px d:none@+md">
					<div class="w:100% pos:relative p:20px ">
						<div class="ov:hidden ar:643.36/556.09 pos:relative w:100% bdrs:20px h:100% bgz:cover bgp:center">
							{% for item in content %}
								<img class="wiloke-3-BGContainer pos:absolute w:100% h:100% t:0 l:0 obf:cover va:middle trs:0.3s" src="{{item.featuredImage}}">
							{% endfor %}
						</div>
						<div class="w:30% h:30% pos:absolute r:0 b:0 bdrsbend:20px z:-1 bdb:3px_solid_#F47708 bdr:3px_solid_#F47708"></div>
						<div class="w:30% h:30% pos:absolute t:0 l:0 bdrstl:20px z:-1 bdt:3px_solid_#F47708 bdl:3px_solid_#F47708"></div>
					</div>
				</div>
        <div
            class="wil-swiper pos:absolute t:0 r:0 h:100% w:40% w:100%@+md"
            data-options='{
              slidesPerView: 4,
              direction: "vertical",
              grabCursor: true,
            }'
          >
            <div class="swiper {{ componentName }}-swiper3 pos:absolute w:100% h:100% swiper-initialized swiper-vertical swiper-pointer-events">
              <div class="swiper-wrapper ">
                {% for item in content %}
                  <div class="swiper-slide w:100% d:block h:auto!@+md">
                    {% include "Shared/" ~ componentFile %}
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
			</div>
		{% endif %}
