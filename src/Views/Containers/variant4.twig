{% set componentName = "wiloke-content-slide-test" %}
{% set componentFile = 'component4.twig' %}


{% if content|length == 0 %}
<div class="{{ componentName }}-wrapper">
  <div class="p:40px fz:20px ta:center bgc:#eee cur:pointer">Click here to set up the Slide</div>
</div>
{% else %}
<div class="{{ componentName }}-wrapper lh:1.5">
  {# <div class="{{ componentName }}-skeleton">
    <div class="{{ componentName }}-grid" style="{{ columnStyles }};{{ gapStyles }}">
      {% for item in content %}
        <div class="{{ componentName }}-col">
          {% include "Skeleton/skeleton1.twig" %}
        </div>
      {% endfor %}
    </div>
  </div> #}
  <div class="d:flex jc:center ai:center pos:relative h:680px h:800@+md h:900@+lg bgz:cover bgp:center bgr:no-repeat">
    {% for item in content %}
      <div class="wiloke-4-BGContainer pos:absolute z:1 ins:0 w:100% h:100% bgz:cover bgp:center bgr:no-repeat trs:0.3s op:0" style="background-image: url('{{item.featuredImage}}')">
      </div>
    {% endfor %}
    <div class="pos:absolute z:2 bgc:rgba(0,0,0,0.4) ins:0 w:100% h:100%"></div>
    <div class="pos:absolute z:3 t:35% l:10% l:2%@+1024px d:none@+md">
      <div class="wiloke-4-mainTitle mainTitleTypo ff:Raleway fz:pfs(18px,45px) fw:600 fs:normal lh:1.5! ta:center" style="{{mainTitleTypo}}{{colorLightVariable}}">{{mainTitle}}</div>
      <div class="wiloke-4-mainText mainTextTypo ff:Raleway fz:pfs(12px,16px) fw:500 fs:normal lh:1.5! ta:center mt:10px" style="{{mainTextTypo}}{{colorLightVariable}}">{{mainText}}</div>
    </div>
    <div class="{{ componentName }}-content pos:absolute z:4 op:0 w:253px h:320px maw:396px mah:463px">
        <div
          class="wil-swiper wil-swiper-4"
          data-options='{
            slidesPerView: 1,
            loop: true,
            autoplay: true,
          }'
        >
          <div class="swiper {{ componentName }}-swiper4">
            <div class="swiper-wrapper d:flex mb:5px">
              {% for item in content %}
                <div class="swiper-slide h:auto! mih:100%! d:flex! fld:column!">
                  {% include "Shared/" ~ componentFile %}
                </div>
              {% endfor %}
            </div>
          </div>
          <div class="pos:absolute b:-50px l:50% trf:translateX(-50%) d:flex ai:center jc:center ">
            <div class="swiper-button-4-prev mr:10px cur:pointer d:flex jc:center ai:center p:20px_0px_20px_20px">
              <svg xmlns="http://www.w3.org/2000/svg" width="31" height="8" viewBox="0 0 31 8" fill="none">
                <path d="M0.146446 4.35355C-0.0488148 4.15829 -0.0488148 3.84171 0.146446 3.64645L3.32843 0.464466C3.52369 0.269204 3.84027 0.269204 4.03553 0.464466C4.2308 0.659728 4.2308 0.976311 4.03553 1.17157L1.20711 4L4.03553 6.82843C4.2308 7.02369 4.2308 7.34027 4.03553 7.53553C3.84027 7.7308 3.52369 7.7308 3.32843 7.53553L0.146446 4.35355ZM30.5 4.5H0.5V3.5H30.5V4.5Z" fill="{{colorSVGVr4Css}}"/>
              </svg>
            </div>
            <div class="swiper-button-4-next cur:pointer d:flex jc:center ai:center p:20px_20px_20px_0px">
              <svg xmlns="http://www.w3.org/2000/svg" width="31" height="8" viewBox="0 0 31 8" fill="none">
                <path d="M30.8536 4.35355C31.0488 4.15829 31.0488 3.84171 30.8536 3.64645L27.6716 0.464466C27.4763 0.269204 27.1597 0.269204 26.9645 0.464466C26.7692 0.659728 26.7692 0.976311 26.9645 1.17157L29.7929 4L26.9645 6.82843C26.7692 7.02369 26.7692 7.34027 26.9645 7.53553C27.1597 7.7308 27.4763 7.7308 27.6716 7.53553L30.8536 4.35355ZM0.5 4.5H30.5V3.5H0.5V4.5Z" fill="{{colorSVGVr4Css}}"/>
              </svg>
            </div>
          </div>
          {% set length = content | length > 9 ? content | length : '0' ~ content | length %}
          <div class="pos:absolute r:-50px b:0">
            <div class="wiloke-4-numberPage fz:25px number-page-4" style="{{colorLightVariable}}"></div>
            <div class="swiper-pagination"></div>
            <div class="wiloke-4-numberPage fz:25px" style="{{colorLightVariable}}">{{length}}</div>
          </div>
        </div>
    </div>
  </div>
</div>

{% endif %}


