{% set componentName = "wiloke-content-slide-test" %}
{% set componentFile = 'component1.twig' %}

{% if content|length == 0 %}
<div class="{{ componentName }}-wrapper">
  <div class="p:40px fz:20px ta:center bgc:#eee cur:pointer">Click here to set up the Slide</div>
</div>
{% else %}
<div class="{{ componentName }}-wrapper lh:1.5">
  {# <div class="{{ componentName }}-skeleton">
    <div class="{{ componentName }}-grid" style="{{ columnStyles }};{{ gapStyles }}">
      {% for item in content %}
        <div class="{{ componentName }}-col">
          {% include "Skeleton/skeleton1.twig" %}
        </div>
      {% endfor %}
    </div>
  </div> #}
  <div class="{{ componentName }}-content pos:absolute op:0">
      <div
        class="wil-swiper wil-swiper1 {{ componentName }}-swiper1"
        data-options='{
          slidesPerView: 1,
          spaceBetween: 60,
          breakpoints: {
            768: { slidesPerView: 1, spaceBetween: 0 },
            992: { slidesPerView: 3, spaceBetween: 60 },
            1200: { slidesPerView: 3, spaceBetween: 60 }
          },
          effect: "coverflow",
          coverflowEffect: {
            scale: 0.9,
            rotate: 0,
            stretch: 0,
            modifier: 1,
            slideShadows: false,
          },
          loop: true,
        }'
      >
        <div class="swiper">
          <div class="swiper-wrapper d:flex mb:5px">
            {% for item in content %}
              <div class="swiper-slide h:auto! mih:100%! d:flex! fld:column!">
                {% include "Shared/" ~ componentFile %}
              </div>
            {% endfor %}
          </div>
        </div>
        <div class="swiper-button-next bg:none!" style="{{colorGray9Variable}}"></div>
        <div class="swiper-button-prev bg:none!" style="{{colorGray9Variable}}"></div>
        <div class="swiper-pagination" style="{{colorPrimaryVariable}}"></div>
      </div>
  </div>
</div>

{% endif %}
